<ScreenFive>:
    BoxLayout:
        Button:
            text: "game.kv"
            background_color : 0, 1, 1, 1
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = "role1"

    FloatLayout:
        size: root.width, root.height
        Label:
            text: "Mafia"
            size_hint: 0.5, None
            height: 50
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            color: "#d73612ff"
            font_name: root.rye_font# "assets\\fonts\\Rye-Regular.ttf"
            font_size: "100dp"

        Label:
            text: root.host_name + ": "
            font_name: root.roboto_font
            size_hint: 0.1, 0.1
            text_size: self.width, None
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": 0.35, "center_y": 0.45}
        TextInput:
            font_name: root.roboto_font
            id: root.username
            multiline: False
            size_hint: 0.3, 0.05
            text_size: self.width, None
            halign: "left"
            valign: "center"
            pos_hint: {"center_x": 0.55, "center_y" : 0.45}
        Label:
            text: "Password: "
            font_name: root.roboto_font
            size_hint: 0.1, 0.1
            text_size: self.width, None
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": 0.35, "center_y" : 0.35}
        TextInput:
            font_name: root.roboto_font
            id: root.password
            multiline: False
            password: True
            pos_hint: {"center_x": 0.55, "center_y" : 0.35}
        Button:
            text: "Login/Signup"
            font_name: root.press_font #"assets\\fonts\\PressStart2P-Regular.ttf"
            pos_hint: {"center_x" : 0.5, "center_y" : 0.225}
            on_release: 
                #app.root.current = 'signup'
                #root.manager.transition.direction = "left"
                root.accountSetup()
        Button:
            text: "Play as Guest"
            font_name: root.press_font #"assets\\fonts\\PressStart2P-Regular.ttf"
            pos_hint: {"center_x" : 0.5, "center_y" : 0.1}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'screen_three'

<ScreenSix>:
    Button:
        text: root.info
        background_color : 0, 1, 1, 1
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.transition.duration = 1
            root.manager.current = 'screen_five'