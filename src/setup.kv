<ScreenThree>:
    FloatLayout:
        Label:
            text: "Game Setup"
            size_hint: 0.5, None
            height: 50
            pos_hint: {"center_x": 0.5, "center_y": 0.95}
            #color: "#7b9fecff"
            color: "#d73612ff"
            font_name: root.rye_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
            font_size: "50dp"
            
        GridLayout:
            rows: 10
            cols: 3
            row_default_height: '40dp'
            row_force_default: True
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            spacing: 130, 5   # (horizontal, vertical) space between widgets
            padding: 20       # space around the edges of the GridLayout

            Label:
                text: "No. Players"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.55}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"   
            Slider:
                id: plr_num_slider
                pos: "400dp", "100dp"
                size_hint_x: None
                width: 300
                disabled: False
                #pos_hint: {"center_x": 0.35, "center_y": 0.55}
                min: 4
                max: 15
                value: 4
                on_value: root.on_plr_slider_value(self)
            Label:
                text: root.plr_num_val
                font: "200dp"
                #pos_hint: {"center_x": 0.475, "center_y": 0.55}
                color: "#e0e0e0ff"
                font_name: root.press_font #"assets\\fonts\\PressStart2P-Regular.ttf"
                font_size: "25dp"
            ###########################################################################
            Label:
                text: "No. Mafia"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"   
            Slider:
                id: maf_num_slider
                pos: "400dp", "100dp"
                size_hint_x: None
                width: 300
                disabled: False
                #pos_hint: {"center_x": 0.35, "center_y": 0.45}
                min: 1
                max: 5
                value: 1
                on_value: root.on_maf_slider_value(self)
            Label:
                text: root.maf_num_val
                font: "200dp"
                #pos_hint: {"center_x": 0.475, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.press_font #"assets\\fonts\\PressStart2P-Regular.ttf"
                font_size: "25dp"
            ###########################################################################
            Label:
                text: "Discussion Time"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"   
            Slider:
                id: discussion_time_slider
                pos: "400dp", "100dp"
                size_hint_x: None
                width: 300
                disabled: False
                #pos_hint: {"center_x": 0.35, "center_y": 0.45}
                min: 0
                max: 60
                value: 30
                on_value: root.on_time_slider_value(self)
            Label:
                text: root.discussion_time_val
                font: "200dp"
                #pos_hint: {"center_x": 0.475, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.press_font #"assets\\fonts\\PressStart2P-Regular.ttf"
                font_size: "25dp"
            ###########################################################################
            Label:
                text: "Include Doctor?"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"
            Switch:
                on_active: root.on_doc_swtich_active(self)
            Label:
            ###########################################################################
            Label:
                text: "Include Detective?"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"
            Switch:
                on_active: root.on_det_swtich_active(self)
            Label:
            ############################################################################
            Label:
                text: "Anonymous Voting?"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"
            Switch:
                on_active: root.on_anonymous_swtich_active(self)
            Label:
            ############################################################################
            Label:
                text: "Allow Skip Vote?"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"
            Switch:
                on_active: root.on_skip_swtich_active(self)
            Label:
            ############################################################################
            Label:
                text: "Execute If Tie?"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.45}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"
            Switch:
                on_active: root.on_execute_swtich_active(self)
            Label:
            ############################################################################
            Label:
                text: "Host Name"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.55}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"
            TextInput:
                id: host_name_widget
                font_name: root.roboto_font
                multiline: False
                size_hint: 0.3, 0.05
                text_size: self.width, None
                halign: "left"
                valign: "center"
                on_text: root.on_host_name_enter(self)
            Label:
            ############################################################################
            Label:
                text: "Host Accent"
                size_hint: 0.5, None
                height: 50
                #pos_hint: {"center_x": 0.15, "center_y": 0.55}
                color: "#e0e0e0ff"
                font_name: root.roboto_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
                font_size: "22dp"  
            TextInput:
                id: host_accent_widget
                font_name: root.roboto_font
                hint_text: "(au, uk, us, ca, in, za, ng)"
                multiline: False
                size_hint: 0.3, 0.05
                text_size: self.width, None
                halign: "left"
                valign: "center"
                on_text: root.on_host_accent_enter(self)

        Button:
            text: "PLAY"
            pos: "100dp", "200dp"
            background_normal: ''
            background_color: "#25AB58FF"
            color: "#e0e0e0ff"
            size_hint: (0.3, 0.1)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            on_press: 
                root.on_play()
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'screen_four'
            font_name: root.press_font #"assets\\fonts\\PressStart2P-Regular.ttf"
            font_size: "30dp"

<ScreenFour>:
    Label:
        text: "Players"
        size_hint: 0.5, None
        height: 50
        pos_hint: {"center_x": 0.5, "center_y": 0.95}
        #color: "#7b9fecff"
        color: "#d73612ff"
        font_name: root.rye_font #"assets\\fonts\\RobotoSlab-Medium.ttf"
        font_size: "50dp"

    Button:
        text: "PLAY"
        pos: "100dp", "200dp"
        color: "#e0e0e0ff"
        background_normal: ''
        background_color: "#25AB58FF"
        size_hint: (0.3, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        on_press: 
            root.start_game()
            root.manager.transition.direction = 'left'
            root.manager.transition.duration = 1
            root.manager.current = 'screen_five'
        font_name: root.press_font #"assets\\fonts\\PressStart2P-Regular.ttf"
        font_size: "30dp"