guiWidget:

<FloatLayout>:
    Label:
        text: "Mafia"
        size_hint: 0.5, None
        height: 50
        pos_hint: {"center_x": 0.5, "center_y": 0.85}
        color: "#d73612ff"
        font_name: "assets\\fonts\\RobotoSlab-Medium.ttf"
        font_size: "75dp"
    Label:
        text: "Game Setup"
        size_hint: 0.5, None
        height: 50
        pos_hint: {"center_x": 0.25, "center_y": 0.65}
        color: "#7b9fecff"
        font_name: "assets\\fonts\\RobotoSlab-Medium.ttf"
        font_size: "50dp"
    Label:
        text: "Players"
        size_hint: 0.5, None
        height: 50
        pos_hint: {"center_x": 0.75, "center_y": 0.65}
        color: "#7b9fecff"
        font_name: "assets\\fonts\\RobotoSlab-Medium.ttf"
        font_size: "50dp"

    GridLayout:
        rows: 2
        cols: 3
        row_default_height: '40dp'
        row_force_default: True
        size_hint: None, None
        size: self.minimum_size
        pos_hint: {"center_x": 0.25, "center_y": 0.5}
        spacing: 135, 10   # (horizontal, vertical) space between widgets
        padding: 20       # space around the edges of the GridLayout

        Label:
            text: "No. Players"
            size_hint: 0.5, None
            height: 50
            #pos_hint: {"center_x": 0.15, "center_y": 0.55}
            color: "#7b9fecff"
            font_name: "assets\\fonts\\RobotoSlab-Medium.ttf"
            font_size: "20dp"   
        Slider:
            id: plr_num_slider
            pos: "400dp", "100dp"
            size_hint_x: None
            width: 300
            disabled: False
            #pos_hint: {"center_x": 0.35, "center_y": 0.55}
            min: 4
            max: 15
            value: 4
            on_value: root.on_plr_slider_value(self)
        Label:
            text: root.plr_num_val
            font: "200dp"
            #pos_hint: {"center_x": 0.475, "center_y": 0.55}
            color: "#e0e0e0ff"
            font_name: "assets\\fonts\\PressStart2P-Regular.ttf"
            font_size: "20dp"
        ###########################################################################
        Label:
            text: "No. Mafia"
            size_hint: 0.5, None
            height: 50
            #pos_hint: {"center_x": 0.15, "center_y": 0.45}
            color: "#7b9fecff"
            font_name: "assets\\fonts\\RobotoSlab-Medium.ttf"
            font_size: "20dp"   
        Slider:
            id: maf_num_slider
            pos: "400dp", "100dp"
            size_hint_x: None
            width: 300
            disabled: False
            #pos_hint: {"center_x": 0.35, "center_y": 0.45}
            min: 1
            max: 5
            value: 1
            on_value: root.on_maf_slider_value(self)
        Label:
            text: root.maf_num_val
            font: "200dp"
            #pos_hint: {"center_x": 0.475, "center_y": 0.45}
            color: "#e0e0e0ff"
            font_name: "assets\\fonts\\PressStart2P-Regular.ttf"
            font_size: "20dp"


    Button:
        text: "PLAY"
        pos: "100dp", "200dp"
        color: "#25AB58FF"
        size_hint: (0.3, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        on_press: root.on_play()
        font_name: "assets\\fonts\\PressStart2P-Regular.ttf"
        font_size: "30dp"

